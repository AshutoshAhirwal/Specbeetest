{% extends "block.html.twig" %}

{% set classes = [ 
  'block--card',
  image_alignment
  ]
%}

{% set attributes = attributes.addClass(classes) %}

{% block content %}
  <div class="block__content">
    <h2 class="block__title">{{content.field_title|field_value}}</h2>
    <div class="block__body">{{content.body|field_value}}</div>
    {{content.field_link}}
  </div>
  <div class="block__media">
    {{content.field_image}}
  </div>
{% endblock %}